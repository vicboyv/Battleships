<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.battleships.OptionsActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Prompt"
        android:id="@+id/smspromptswitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/soundswitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="switchSMSPrompt" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/soundswitch"
        android:layout_alignRight="@+id/smspromptswitch"
        android:layout_alignEnd="@+id/smspromptswitch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="switchSound"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tile Size"
        android:id="@+id/tilesizetoggle"
        android:layout_below="@+id/smspromptswitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/smspromptswitch"
        android:layout_alignEnd="@+id/smspromptswitch"
        android:textOff="Smaller Tiles"
        android:textOn="Larger Tiles"
        android:onClick="toggleTileSize"/>

</RelativeLayout>
